	  mix-blend-mode: var(--blend-mode);
	  filter: grayscale(1) brightness(var(--photo-brightness)) contrast(var(--photo-contrast)) blur(var(--photo-blur)) var(--make-colorOrange);
	}

	.canvas .imgBlue {
	  /*position: absolute;
	  top: 0;
	  left: 0;
	  width: 100%;
	  height: 100%;*/
