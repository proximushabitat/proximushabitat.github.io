---
import Image from "astro/components/Image.astro";

import bg from "@/assets/for_content/img/test002.webp"

import GradientGeneric from "@/assets/for_site/gradientGeneric.astro"

import { lineSet } from "@/snippets/design";
import { aosDuration, aosDelay } from '@/snippets/aosValues';

import backgroundUrl from "@/assets/for_site/noise.svg";

import mainImg from "@/assets/for_content/features/main/aarberg_0.0.5.png";

const colorFont = "#FFF1EB"//"#FFD5C2"//"#ECE9D4";/*"#E1F4F4""#FFF1EB"*/

console.log("bgurl");
console.log(backgroundUrl);

const nLines = 3;
const baseRem = 0.2;
const incIncDecimal = 0.5;
const startWith = "t";
const startWith2 = "l";
const spacingRem = 0.15;

const lines = lineSet(nLines, baseRem, incIncDecimal, startWith, spacingRem);
const lines2 = lineSet(nLines, baseRem, incIncDecimal, startWith2, spacingRem);

const { img, imagedText, rawerText, rawerTextBreaks, rawerTextBreaks2, colorBack, colorFore, doLines, extendBelow } = Astro.props;


---

<li class={"singleFeature fadeTop shadow-fadeTop shadow-primary p-0 w-full h-[77vh] -mt-[9rem] -mb-48 flex flex-col-reverse"}
	data-aos="fade-up"
	data-aos-duration={aosDuration(1)}
	data-aos-delay={aosDelay(0)}
>
	<div class={"linesContainer transition-all mt-[0.15rem]"} style={`height: ${lines.totalHeight};max-height: ${lines.totalHeight};`} data-totalHeight={lines.totalHeight}>
		{lines2.heightOfLinesPerc.map((heightOfLine:number, index:number) => (
		<div class={index && "putLineSpacer mt-designLinesSpaceBetween transition-all" || "noLineSpacer"} style={`height: ${heightOfLine};`}>
			<div class="grid h-full w-full">
				<div class="fgNoised col-start-1 row-start-1 h-full w-full z-30">
				</div>
				<div 
					class={"col-start-1 row-start-1 h-full w-full bgNoised z-20"} style={"backgroundd: " + colorBack + ";"} >
				</div>
			</div>
		</div>
		))}
	</div>
	{extendBelow == "true" &&
		/*<div class={"w-full h-[6rem]"} style={"backgroundd: linear-gradient(180deg," + colorBack + " 0%, rgba(253, 187, 45, 0) 100%);"}>
		</div>*/
		<div class="h-24 bgNoised" style={"backgroundd: " + colorBack + ";"}>
			<div class="grid h-full w-full">
				<div class="fgNoised col-start-1 row-start-1 h-full w-full">
				</div>
				<div class="col-start-1 row-start-1">
				</div>
			</div>
		</div>
		||
		<div class="h-3 bgNoised" style={"backgroundd: " + colorBack + ";"}>
			<div class="grid h-full w-full">
				<div class="fgNoised col-start-1 row-start-1 h-full w-full">
				</div>
				<div class="col-start-1 row-start-1">
				</div>
			</div>
		</div>
	}
	<div class="slotWrap w-full h-full max-w-full">
		<div class="grid h-full w-full">
			<div class="col-start-1 row-start-1 h-full w-full z-30">
			</div>
			<div class="col-start-1 row-start-1 h-full w-full z-20 grid">
				<div class={"imaged flex-grow flex justify-center w-full col-start-1 row-start-1"} style={"backgroundd: " + colorBack + ";"}>
					<div class="min-h-full w-full lg-w-full my-0 grid grid-cols-1 grid-rows-1 max-w-full ">
						<div class="imageCont h-full md:max-h-[77vh] overflow-clip max-w-full col-start-1 row-start-1 grid" style={/*"background: url("+item.thumb.src+");background-size: cover;background-position: center;"*/""}>
							<div class="col-start-1 row-start-1 h-full w-full shadow-fadeTop shadow-primary z-50"></div>
							<div class="fgNoised col-start-1 row-start-1 h-full w-full z-40"></div>
							<div class="col-start-1 row-start-1 h-full w-full flex items-center canvas">
								<Image
									src={mainImg}
									alt={"fff"}
									class="w-full h-full object-cover"
									medium-zoomable
								/>
							</div>
						</div>
					</div>
				</div>
				<div class={" overlayingText z-60 col-start-1 row-start-1 rawer w-full text-5xl md:text-7xl xl:text-8xl text-justify break-words hyphens-auto flex justify-center items-center "} style={""}>
					<div class={"pb-[9rem] h-full pt-2 w-full mix-blend-color-dodge "} style={"colorr: " + colorFore + ";"}>					
						<span class="absolute bottom-[14rem] text-right font-black w-full">
							{/*rawerText*/}
							<svg style="border: 1px solid transparent;" width="100%" height="100" viewBox="0 0 1562 100" preserveAspectRatio="xMidYMid meet" class="hidden lg:block -mb-12">
								<text x="50%" y="50%" dominant-baseline="middle" text-anchor="middle" font-size="100" font-family="sans-serif" fill={colorFont}>
									{rawerText}
								</text>
							</svg>
							<!-- 
							<svg
								width="100%"
								height="100%"
								viewBox="0 10 1600 800"
								preserveAspectRatio="xMidYMid meet"
								style="border: 1px solid transparent;"
								class="lg:hidden mb-4 sm:mb-2 md:-mb-6"
								>
								<text
									x="100%"
									y="100%"
									text-anchor="end"
									font-size="160"
									font-family="sans-serif"
									fill="white"
								>
									{(() => {
									const lines = (rawerTextBreaks || "").split('\n');
									const reversed = [...lines].reverse();
									return reversed.map((line, i) => (
										<tspan
										key={i}
										x="1600"
										dy={i === 0 ? '0' : '-1.2em'}
										>
										{line}
										</tspan>
									));
									})()}
								</text>
							</svg>-->

							<svg
								width="100%"
								height="100%"
								viewBox="0 10 1600 800"
								preserveAspectRatio="xMidYMid meet"
								style="border: 1px solid transparent;"
								class="hidden sm:flex lg:hidden mb-4 sm:mb-2 md:-mb-6"
								>
								<text
									x="100%"
									y="800"
									text-anchor="end"
									font-size="160"
									font-family="sans-serif"
									fill={colorFont/*"#E1F4F4""#FFF1EB"*/}
								>
									{
									rawerTextBreaks
										?.split('\n')
										.reverse()
										.map((line, i) => (
										<tspan
											x="100%"
											dy={i === 0 ? "0" : "-1.2em"}
										>
											{line}
										</tspan>
										))
									}
								</text>
							</svg>

							<svg
								width="100%"
								height="100%"
								viewBox="0 10 1600 800"
								preserveAspectRatio="xMidYMid meet"
								style="border: 1px solid transparent;"
								class="sm:hidden mb-4 sm:mb-2 md:-mb-6"
								>
								<text
									x="100%"
									y="800"
									text-anchor="end"
									font-size="222"
									font-family="sans-serif"
									fill={colorFont}
								>
									{
									rawerTextBreaks2
										?.split('\n')
										.reverse()
										.map((line, i) => (
										<tspan
											x="100%"
											dy={i === 0 ? "0" : "-1.2em"}
										>
											{line}
										</tspan>
										))
									}
								</text>
							</svg>

							  
						</span>
					</div>

				</div>
			</div>
		</div>
		
	</div>
	
  {doLines == "true" &&
	<div class={"linesContainer transition-all mb-[0.15rem]"} style={`height: ${lines.totalHeight};max-height: ${lines.totalHeight};`} data-totalHeight={lines.totalHeight}>
        {lines.heightOfLinesPerc.map((heightOfLine:number, index:number) => (
          <div class={index && "putLineSpacer mt-designLinesSpaceBetween transition-all" || "noLineSpacer"} style={`height: ${heightOfLine};`}>
            <div class="grid h-full w-full"
				data-aos="fade-up"
				data-aos-duration={aosDuration(2)}
				data-aos-delay={aosDelay(index)}
			>
				<div class="fgNoised col-start-1 row-start-1 h-full w-full z-50">
				</div>
				<div 
					class={"col-start-1 row-start-1 h-full w-full bgNoised z-40"} style={"backgroundd: " + colorBack + ";"} >
				</div>
			</div>
          </div>
        ))}
    </div>
  }
	
</li>

