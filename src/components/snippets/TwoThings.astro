---
const { left, right } = Astro.props;

//aos
import { aosDuration, aosDelay } from '@/snippets/aosValues';
---
{ 
<div class="my-4 space-y-2 italic">
	<div
		class="h-0.5 bg-secondary"
		data-aos="fade-up"
		data-aos-duration={aosDuration(1)}
		>
	</div>
	<div class="flex flex-row space-between">
		<span class="grow"  data-aos="fade-up" data-aos-duration={aosDuration(2)}>{left}</span><span></span>
		<span data-aos="fade-up" data-aos-duration={aosDuration(2)}>{right}</span>
	</div>
	<div 
		class="h-1.5 bg-secondary"
		data-aos="fade-up" data-aos-duration={aosDuration(3)}
		>
	</div>
</div>
}